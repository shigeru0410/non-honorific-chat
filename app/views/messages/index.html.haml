.side-bar
  .side-bar__user-name 
    .top-items
      %h3.top-items__name
        = current_user.name
      %ul.top-items__btns
        %li
          = link_to new_group_path do
            = icon('far', 'edit', class: "top-items__btns--icon")
        %li
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: "top-items__btns--icon")
  .side-bar__group-list
    - current_user.groups.each do |group|
      = link_to group_messages_path(group), class: "side-bar__group-list__box" do
        .side-bar__group-list__box__group-name
          = group.name
        .side-bar__group-list__box__group-message
          = group.show_last_message
.chat-main
  .chat-main__group-info
    .chat-main__group-info__group
      .chat-main__group-info__group__name
        = @group.name
      %ul.chat-main__group-info__group__list
        Menber：
        - @group.users.each_with_index do |user|
          = user.name
    = link_to "Edit", edit_group_path(@group), class: "chat-main__group-info__editbtn" 
  .chat-main__message-list
    = render @messages
  .chat-main__message-form
    = form_with model: [@group, @message], html: {class: "bottom-items"}, local: true do |f|
      .bottom-items__new-message
        = f.text_area :content, class: 'bottom-items__new-message__text'
        = f.label :image, class: 'bottom-items__new-message__image' do
          = icon('far', 'image', class: "bottom-items__new-message__image__icon")
          = f.file_field :image, class: "bottom-items__new-message__image__btn"
      = f.submit '(*･∀･)ゞ了解!!', class: 'bottom-items__submitbtn'
      = f.submit '(ヾﾉ･∀･`)ﾑﾘﾑﾘ', class: 'bottom-items__submitbtn'
      = f.submit '送信', class: 'bottom-items__submitbtn'
      