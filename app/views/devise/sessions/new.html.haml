.body
  .logo
    %h1 Log in
  .form
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        .field__label
          = f.label :email
        .field__input
          = f.email_field :email, autofocus: true
        .FormField
          .FormField__label
            = f.label :password
            %i (英数字8文字以上)
          .FormField__input
            = f.password_field :password, autocomplete: "off"
        .actions
          = f.submit "Log in", class: 'Button UserButton'

= render "devise/shared/links"